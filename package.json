{
  "name": "redorn",
  "version": "0.1.0",
  "private": false,
  "dependencies": {
    "axios": "^0.21.1",
    "customize-cra": "^1.0.0",
    "qs": "^6.9.4",
    "react": "17.0.1",
    "react-app-rewired": "^2.1.8",
    "react-dom": "17.0.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.1",
    "styled-components": "^5.2.1",
    "tailwindcss": "^2.0.2",
    "twin.macro": "^2.0.7"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.29.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "eslint": "^7.16.0",
    "gzipper": "^4.3.0",
    "husky": "^4.3.6",
    "jest": "26.6.3",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "babelMacros": {
    "twin": {
      "preset": "styled-components",
      "config": "./tailwind.config.js",
      "autoCssProp": true,
      "hasSuggestions": true,
      "disableColorVariables": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run eslint"
    }
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build && gzipper c --include ts --verbose ./build",
    "test": "react-app-rewired test --maxWorkers=3",
    "test:coverage": "react-app-rewired test --watchAll=false --coverage --no-cache --logHeapUsage --silent --maxWorkers=2",
    "eslint": "eslint --fix --ext .jsx,.js src"
  }
}